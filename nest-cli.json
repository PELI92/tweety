{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.build.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.build.json",
        "webpack": false
      }
    },
    "tweet": {
      "type": "application",
      "root": "apps/tweet",
      "entryFile": "main",
      "sourceRoot": "apps/tweet/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tweet/tsconfig.build.json",
        "webpack": false
      }
    }
  }
}
